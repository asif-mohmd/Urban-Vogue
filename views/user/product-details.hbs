<script>
  function addToCart(id) {
    const selectedSize = document.querySelector('input[name="size"]:checked');

    if (!selectedSize) {
      // Show the modal if no size is selected
      $('#exampleModal').modal('show');
      return;  // Stop the function if no size is selected
    }

    const selectedValue = selectedSize.value;

    const returnUrl = `/addToCart?id=${id}&size=${selectedValue}`;

    window.location.href = returnUrl;
  }

  // Close the modal when the "Close" button inside the modal is clicked
  document.getElementById('closeModalBtn').addEventListener('click', function() {
    $('#exampleModal').modal('hide');
  });
</script>



