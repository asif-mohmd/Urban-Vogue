    <script>
        function changeQuantity(cartId, productId, size, count) {
            let quantity = parseInt(document.getElementById(`${productId}-${size}`).innerHTML); // Include the size in the element ID
            let parsedCount = parseInt(count);

            // Disable the form submission for quantity update buttons only
            if (event.target.classList.contains('pro-qty-button')) {
                event.preventDefault();
                // Disable the form submit button during the quantity update
                document.querySelector('form[action="/checkout"] button[type="submit"]').setAttribute('disabled', 'true');
            }

            fetch("/change-product-quantity", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    cart: cartId,
                    product: productId,
                    size: size,
                    count: parsedCount,
                    quantity: quantity
                })
            })
                .then(response => response.json())
                .then(response => {
                    if (response.removeProduct) {
                        $('#exampleModal2').modal('show');
                    } else if (response.stockLimit) {
                       document.getElementById("stockLimitReached").disabled = true;
                       $('#exampleModal3').modal('show');
                       
                    } else {
                        document.getElementById(`${productId}-${size}`).innerHTML = quantity + parsedCount;
                        document.getElementById("stockLimitReached").disabled = false;
                        document.getElementById('totalValue').innerText = "₹ " + response.total[0].total;
                    }
                })
                .catch(error => console.error('Error:', error))
                .finally(() => {
                    // Enable the form for submission after quantity update
                    document.querySelector('form[action="/checkout"] button[type="submit"]').removeAttribute('disabled');
                });
        }
    </script>


