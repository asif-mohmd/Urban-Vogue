  <main id="main" class="main">
    <!-- Modal -->





    <section class="section">
      <div class="row">
        <div class="col-lg-12">
    
          <div class="card">
            <div class="card-body">
              {{!-- <h5 class="card-title">Users</h5> --}}



{{!-- This is the input of order Id . its from url and parsed with the help of script --}}
       <input type="text" id="orderId" name="orderId" hidden>
              <!-- Table with stripped rows -->
              <table class="table datatable">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                     <th scope="col">order ID</th>
                     <th scope="col">Date</th>
                     <th scope="col">Zip</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Count</th>
                    <th scope="col">7 Day Return</th>
                  </tr>
                </thead>
             
                <tbody>
                  {{#each orderDetails.products}}
                  <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{../orderDetails.orderId}}</td> 
                    <td>{{../orderDetails.date}}</td>
                    <td>{{../orderDetails.address.pincode}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.count}}</td>

                    
                 {{/each}}
                    <td>
                        {{#if (eq orderDetails.status "delivered")}}
                      {{#if orderReturn}}
                      <button type="button" class="btn btn-warning" data-mdb-toggle="modal"
                        data-mdb-target="#exampleModal2{{@key}}">Return</button>
                      {{else}}
                      <p>Return window closed</p>
                      {{/if}}
                    </td>
                  </tr>
                  {{/if}}

                   <div class="modal fade" id="exampleModal2{{@key}}" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                          <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">Why are you returning this order</div>
                        <fieldset class="row mb-3 ml-5">
                          <div class="col-sm-10">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="returnType" id="gridRadios1" value="0">
                              <label class="form-check-label" for="gridRadios1">
                                Defective
                              </label>
                            </div>
                            <div class="form-check disabled">
                              <input class="form-check-input" type="radio" name="returnType" id="gridRadios" value="1">
                              <label class="form-check-label" for="gridRadios3">
                                Other
                              </label>
                            </div>
                          </div>
                        </fieldset>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-warning" name="order_id" id="order_id"
                            onclick="returnOrder('{{this._id}}')">Return
                            Order</button>

                        </div>
                      </div>
                    </div>
                  </div>
                  
    
                </tbody>
              </table>


              <!-- End Table with stripped rows -->

              <!-- Button trigger modal -->




