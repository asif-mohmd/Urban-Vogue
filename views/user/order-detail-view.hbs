  <script>
    function returnOrder(id) {
     const selectedValue = document.getElementById('orderId').value;
      console.log("Selected Value:", selectedValue);

      const returnUrl = `/return-user-order?id=${id}&orderId=${selectedValue}`;
      console.log("Return URL:", returnUrl);

      window.location.href = returnUrl;
    }
  </script>

